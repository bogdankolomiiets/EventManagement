<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/no_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_files"
        android:textSize="@dimen/textSize12sp"
        android:textColor="@color/colorCadetBlue"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.1"
        android:layout_centerInParent="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_resources_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/value_16_dp"
        android:layout_marginBottom="@dimen/value_16_dp"
        android:backgroundTint="@color/colorScooter"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_add" />

    <LinearLayout
        android:id="@+id/fab_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_resources_fab"
        android:layout_alignStart="@id/add_resources_fab"
        android:layout_alignEnd="@id/add_resources_fab"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_youtube_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_8_dp"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_youtube"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_snapshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_8_dp"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_photo_camera"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_8_dp"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_image" />

    </LinearLayout>
</RelativeLayout>