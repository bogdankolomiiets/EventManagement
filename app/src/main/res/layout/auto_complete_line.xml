<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/value_8_dp"
    android:layout_marginEnd="@dimen/value_8_dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_line_search"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/value_8_dp"
        android:text="@string/result"
        android:textColor="@color/colorTundora"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_line_search_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCadetBlueOpacity54"/>
</LinearLayout>