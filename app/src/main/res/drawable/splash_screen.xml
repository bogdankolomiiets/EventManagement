<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/colorHibiscus"
                android:startColor="@color/colorEminence" />
        </shape>
    </item>
    <item android:top="200dp">
        <bitmap android:gravity="top"
            android:src="@drawable/splash_screen_title"
            />
    </item>
</layer-list>