<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorControlNormal">@color/colorScooter</item>
    </style>

    <style name="WhiteAppTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="NewEventActivityStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorWaikawaGrayOpacity50</item>
        <item name="colorControlActivated">@color/colorScooter</item>
    </style>

    <style name="ToolBarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorScooter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolBarNewEventTitleStyle" parent="ToolBarTitleStyle">
        <item name="colorControlNormal">@color/colorScooter</item>
        <item name="android:layout_marginEnd">?actionBarSize</item>
        <item name="android:layout_marginStart">?actionBarSize</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="TextStyleRobotoRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyleRobotoMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize12sp</item>
    </style>

    <style name="ButtonPassCodeStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">@dimen/value_16_dp</item>
        <item name="android:background">@drawable/pass_code_buttons_background</item>
        <item name="android:textColor">@drawable/change_color_button</item>
        <item name="android:fontFamily">@font/sfns_display</item>
        <item name="android:textSize">30sp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="ButtonPassCodeStyle.Borderless" parent="ButtonPassCodeStyle">
        <item name="android:elevation">@dimen/value_0_dp</item>
    </style>

    <style name="ButtonDelPassCodeStyle" parent="ButtonPassCodeStyle.Borderless">
        <item name="android:src">@drawable/change_image_button</item>
    </style>

    <style name="InputIndicatorStyle">
        <item name="android:layout_width">@dimen/value_8_dp</item>
        <item name="android:layout_height">@dimen/value_8_dp</item>
        <item name="android:layout_margin">@dimen/value_16_dp</item>
        <item name="android:background">@drawable/indicator_animation</item>
    </style>

    <style name="CustomToastTextStyle">
        <item name="android:background">@color/colorBittersweet</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize14sp</item>
        <item name="android:padding">@dimen/value_4_dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditConfirmationCodeStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBittersweet</item>
        <item name="android:textColorHint">@color/colorBittersweetOpacity20</item>
        <item name="android:textSize">@dimen/textSize48sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="SelectDateStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="checkBoxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorWattle</item>
        <item name="colorControlNormal">@color/colorWaikawaGray</item>
    </style>

    <style name="DateTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorScooter
        </item>                   <!--header background-->
        <item name="android:colorControlActivated">@color/colorWattle</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/colorWaikawaGray
        </item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorCadetBlue
        </item>    <!--days of the week-->
    </style>

    <style name="FullEventInfoStyle">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textColor">@color/colorTundora</item>
        <item name="android:padding">@dimen/value_4_dp</item>
    </style>

    <style name="NavigationViewMenuItemStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:listDivider">@color/colorWhiteOpacity50</item>
    </style>

    <style name="RadioButtonOnFilterScreen">
        <item name="android:buttonTint">@drawable/change_color_radio_button</item>
    </style>

    <style name="AppTheme.AutoCompleteTextViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/colorScooterOpacity75</item>
        <item name="android:colorControlNormal">@color/colorWhiteOpacity75</item>
    </style>

</resources>
